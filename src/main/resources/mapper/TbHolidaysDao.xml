<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.emos.wx.db.dao.TbHolidaysDao">
    <!--    是否是特殊节假日-->
    <select id="findTodayIsHolidays" resultType="integer">
        SELECT id
        FROM tb_holidays
        WHERE date = CURRENT_DATE LIMIT 1;
    </select>

    <!--    查询本周有没有特殊的节假日-->
    <select id="findHolidaysInRange" parameterType="hashmap" resultType="string">
        SELECT date
        FROM tb_holidays
        WHERE date BETWEEN #{startDate}
          AND #{endDate}
    </select>

</mapper>